<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndividualShopDetails"
    android:id="@+id/individualShopDetails"
    android:background="@color/colorPrimary">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:name="com.android.sonsofpitches.starbazaar.HeaderFragment"
        android:id="@+id/individualShopDetailsHeader"/>

    <RelativeLayout
        android:id="@+id/individualShopDetailsImageLayout"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="52dp"
        android:paddingEnd="50dp"
        android:paddingHorizontal="50dp"
        android:paddingStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/individualShopDetailsHeader"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/individualShopDetailsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/individualShopDetailsDescription"
        app:layout_constraintTop_toBottomOf="@id/individualShopDetailsImageLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="23sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="20dp"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="80dp"
        android:textColor="#FFF"/>


</android.support.constraint.ConstraintLayout>